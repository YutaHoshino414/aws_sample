<div id="menu-tittle">
カテゴリ検索　<i class="fas fa-list" style="color:orange;"></i>
</div>
  <ul id="sample">
   <% @parents.each do |parent| %>
   <li>
     <%= link_to category_path(parent.id) do %>
       <%= parent.name %>
     <% end %>
     <ul>
       <h3><%= parent.name %></h3>
       <% parent.children.each do |child| %>
       <li>
         <%= link_to category_path(child.id) do %>
           <%= child.name %>
         <% end %>
         <ul class="big">
           <h3><%= child.name %></h3>
           <% child.children.each do |grandchild| %>
           <li>
             <%= link_to category_path(grandchild.id) do %>
             <%= grandchild.name %>
             <% end %>
           <% end %>
           </li>
         </ul>
         <% end %>
       </li>
     </ul>
    </li>
   <% end %>
  </ul><hr> 